\edef\saved@f@size{\f@size}
\def\check@normalsize{%
  \ifx\saved@f@size\f@size
  \else
    \@latex@error{You can't change normalsize of the document!}\@eha
  \fi
  }

\edef\saved@textwidth{\the\textwidth}
\def\check@textwidth{%
  \ifdim\textwidth=\saved@textwidth
  \else
    \@latex@error{You can't change \string\textwidth\space of the document!}\@eha
  \fi
  }

